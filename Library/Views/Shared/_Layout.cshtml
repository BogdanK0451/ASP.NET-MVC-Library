<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Library</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between me-auto">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Popular</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Book" asp-action="Shelves">Bookshelves</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Book" asp-action="Index">Administrators Corner</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark ">Personal Corner</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark ">Counter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark ">Transactions</a>
                        </li>
                        <li class="nav-item" style="cursor:pointer;position:absolute;right:75px">
                            <a  id="sign_up" class="nav-link text-dark ">Sign Up</a>
                        </li>
                        <li class="nav-item" style="cursor: pointer; position: absolute; right: 15px">
                            <a  id="sign_in" class="nav-link text-dark ">Sign In</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div id="sign_up_modal" class="modal">
        <div class="modal-content">
            <h5>Sign Up</h5>
            <p>lmao</p>
        </div>
    </div>
    <div id="sign_in_modal" class="modal">
        <div class="modal-content">
            <h5>Sign In</h5>
            <p>Lmao</p>
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Library - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/notify/notify.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script type="text/javascript">
    ////probably a non optimal location for js..??
    let signUp = document.querySelector("#sign_up");
    let signIn = document.querySelector("#sign_in");
    console.log(sign_up);
    signUp.addEventListener("click", showForm);
    signIn.addEventListener("click", showForm);

    function showForm(e) {
        console.log(e.target);
        let selectedModal=document.querySelector("#"+e.target.id + "_modal");
        selectedModal.style.display = "block";
        let clickListener =window.addEventListener("click", e => { if (e.target == selectedModal) selectedModal.style.display = "none" })
        window.removeEventListener("click",clickListener);
    }

</script>
