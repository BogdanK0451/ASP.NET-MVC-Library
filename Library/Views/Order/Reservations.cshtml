@model IEnumerable<Library.ViewModels.ReservationsVm>

@{
    ViewData["Title"] = "Reservations";
}
<div class="container">
    <div class="row">
        <div class="col-xs-10">
            <div class="panel panel-primary">
                <!-- Default panel contents -->
                <div class="panel-heading">
                    <h2 class="panel-title">
                        Reservations
                    </h2>
                </div>

                <table class="table table-hover" style="cursor:default">
                    <thead>
                        <tr>
                            <th>Reservation ID</th>
                            <th>Customer Name</th>
                            <th>Customer ID</th>
                            <th>Book ID</th>
                            <th>Book ISBN</th>
                            <th>Book Name</th>
                            <th>Book Author</th>
                            <th>Requested on</th>
                            <th>Approve</th>
                            <th>Cancel</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var res in Model)
                        {
                        <tr>
                            <td>@res.ID</td>
                            <td>@res.FullName</td>
                            <td>@res.UserID</td>
                            <td>@res.BookID</td>
                            <td>@res.BookISBN</td>
                            <td>@res.BookName</td>
                            <td>@res.BookAuthor</td>
                            <td>@res.RequestedAt</td>
                            <td><button type="button" class="btn btn-primary btn-outline-primary">Approve</button></td>
                            <td><button type="button" class="btn btn-secondary btn-outline-secondary" style="color:white">Cancel</button></td>
                        </tr>
                        }

                </table>
            </div>
        </div>
    </div>
</div>